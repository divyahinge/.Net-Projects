@model WorkshopManagementApp.Models.Workshop
@{
    ViewBag.Title = "Edit";
}
<hr />
<div class="container">
    <h2>Edit Product</h2>
    <form method="post" action="/event/edit">

        <input type="hidden" class="form-control" id="id" value="@Model.Id" name="Id">

        <div class="form-group">
            <label for="name">Workshop Name :</label>
            <input type="text" class="form-control" id="name" placeholder="Enter Workshop Name" value="@Model.Name" name="name">
        </div>
        <div class="form-group">
            <label for="info">Workshop Topic:</label>
            <input type="text" class="form-control" id="topic" placeholder="Enter Workshop Topic" value="@Model.Topic" name="topic">
        </div>
        <div class="form-group">
            <label for="quan">Workshop Description:</label>
            <input type="text" class="form-control" id="description" placeholder="Enter Workshop Description" value="@Model.Description" name="Description">
        </div>
        <div class="form-group">
            <label for="quan">Presenter's Name:</label>
            <input type="text" class="form-control" id="presentor" placeholder="Enter Presenter's Name" value="@Model.Presentor" name="presentor">
        </div>
        <div class="form-group">
            <label for="quan">Workshop Location:</label>
            <input type="text" class="form-control" id="location" placeholder="Enter Workshop Location" value="@Model.Location" name="Location">
        </div>
        <button type="submit" class="btn btn-default">Update</button>
    </form>
</div>
