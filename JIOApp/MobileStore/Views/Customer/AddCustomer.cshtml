
@{
    ViewBag.Title = "AddCustomer";
}

<hr />
<h2>Add New Customer</h2>
<hr />
<br />
<div class="container">

    <!--<p>@this.ViewBag.displayMessage</p>-->

    <form method="post" action="/customer/addcustomer">

        <div class="form-group">
            <label name="id">Customer Id: </label>
            <input type="number" class="form-control" id="id" placeholder="Enter  id" name="id">
        </div>
        <div class="form-group">
            <label for="fullname">Customer Name:</label>
            <input type="text" class="form-control" id="fullname" placeholder="Enter Full Name" name="fullname">
        </div>

        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" class="form-control" id="address"
                   placeholder="Enter  Address" name="address" />

        </div>
        <div class="form-group">
            <label for="ContactNo">Contact No:</label>
            <input type="text" class="form-control" id="contactNo" placeholder="Enter  contact" name="contactNo">
        </div>

        <div class="form-group">
            <label for="product">Product Purchased:</label>
            <input type="text" class="form-control" id="product" placeholder="Enter  product" name="product">
        </div>

        <button type="submit" class="btn btn-default">Add Customer</button>
    </form>
</div>