
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<div class="container">

    <form method="post" action="/movie/edit">
        <div class="form-group">
            <label for="id"> Id:</label>
            <input type="text" class="form-control" id="id" value="@ViewBag.feedback.Id" name="id">
        </div>
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="quantity" value="@ViewBag.feedback.Name" name="name">
        </div>
        <div class="form-group">
            <label for="review">Review:</label>
            <input type="text" class="form-control" id="quantity" value="@ViewBag.feedback.Review" placeholder="Enter Review" name="review">
            </div>
            <button type="submit" class="btn btn-default">Update</button>
    </form>
</div>
