@model BOL.Product
@{
    ViewBag.Title = "Edit";
}
<br />
<hr />
<h2>Edit</h2>
<hr />
@Html.Display("Update Product Information")

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Id)
        @Html.TextBoxFor(model => model.Id, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Id)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Info)
        @Html.TextBoxFor(model => model.Info, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Info)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.UnitPrice)
        @Html.TextBoxFor(model => model.UnitPrice, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UnitPrice)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Quantity)
        @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Quantity)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
 }