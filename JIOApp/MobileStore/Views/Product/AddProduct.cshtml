@model  BOL.Product
@{
    ViewBag.Title = "AddProduct";
}
<hr />
<h2>Add New Product</h2>
<hr />
<br />
<div class="container">

    <!--<p>@this.ViewBag.displayMessage</p>-->

    <form method="post" action="/product/addproduct">

        <div class="form-group">
            <label name="id">Id: </label>
            <input type="number" class="form-control" id="id"  placeholder="Enter  id" name="id">
        </div>
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title"  placeholder="Enter  title" name="title">
        </div>

        <div class="form-group">
            <label for="description">Description:</label>
            <input type="text" class="form-control" id="info"
                   placeholder="Enter  Description" name="info"  />

        </div>
        <div class="form-group">
            <label for="unitprice">Unit Price:</label>
            <input type="text" class="form-control" id="unitprice" placeholder="Enter  Unitprice" name="unitprice">
        </div>

        <div class="form-group">
            <label for="quantity">Quantity:</label>
            <input type="text" class="form-control" id="quantity"  placeholder="Enter  Quantity" name="quantity">
        </div>

        <button type="submit" class="btn btn-default">Add Product</button>
    </form>
</div>